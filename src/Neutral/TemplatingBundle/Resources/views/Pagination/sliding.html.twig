{% if pageCount > 1 %}
<ul class="pagination">
    {% if first is defined %}
        <li{% if current == first %} class="disabled"{% endif %}>
            <a href="{{ path(route, query|merge({(pageParameterName): first})) }}">&laquo;</a>
        </li>
    {% endif %}

    {% if previous is defined %}
        <li>
            <a href="{{ path(route, query|merge({(pageParameterName): previous})) }}">&lsaquo;</a>
        </li>
    {% endif %}

    {% for page in pagesInRange %}
        {% if page != current %}
            <li>
                <a href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }}</a>
            </li>
        {% else %}
            <li class="active">
                <a href="{{ path(route, query|merge({(pageParameterName): page})) }}">
                    {{ page }} <span class="sr-only">(current)</span>
                </a>
            </li>
        {% endif %}

    {% endfor %}

    {% if next is defined %}
        <li class="next">
            <a href="{{ path(route, query|merge({(pageParameterName): next})) }}">&rsaquo;</a>
        </li>
    {% endif %}

    {% if last is defined %}
        <li{% if current == last %} class="disabled"{% endif %}>
            <a href="{{ path(route, query|merge({(pageParameterName): last})) }}">&raquo;</a>
        </li>
    {% endif %}
</ul>
{% endif %}